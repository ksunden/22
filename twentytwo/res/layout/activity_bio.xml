<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

<LinearLayout 
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AboutUsActivity" >
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitStart"
        android:src="@drawable/generictootoo"
        android:contentDescription="@string/tootoo_pic_1"
        android:paddingBottom="@dimen/menu_button_margins"/>

    <TextView
        android:id="@+id/bioBody1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/jb_paragraph_1" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/tootoo_pic_1"
        android:paddingBottom="@dimen/menu_button_margins"
        android:scaleType="fitStart"
        android:src="@drawable/wristband1" />

    <TextView
        android:id="@+id/bioBody2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/jb_paragraph_2" />
    
    
    
</LinearLayout>
</ScrollView>
